<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.androidbienchen"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data 
            android:name="com.google.android.gms.version" 
        	android:value="@integer/google_play_services_version"/>
        <activity
            android:name="de.androidbienchen.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.androidbienchen.activities.StatisticActivity"
            android:label="@string/title_activity_scale" >
        </activity>
        <activity
            android:name="de.androidbienchen.activities.CamActivity"
            android:label="@string/title_activity_cam" >
        </activity>
        <activity
            android:name="de.androidbienchen.activities.ChatActivity"
            android:label="@string/title_activity_chat" >
        </activity>
        <activity
            android:name="de.androidbienchen.activities.PresenceStatusActivity"
            android:label="@string/title_activity_presence_status" >
        </activity>
        <activity
            android:name="de.androidbienchen.activities.CalendarActivity"
            android:label="@string/title_activity_calendar" >
        </activity>
    </application>

</manifest>
