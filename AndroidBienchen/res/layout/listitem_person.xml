<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/status_image"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/online_point"
        android:contentDescription="Just a Picture" />

    <TextView
        android:id="@+id/present_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/status_image"
        android:alpha=".87"
        android:textSize="16sp" />
    
    <TextView
        android:id="@+id/presence_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/present_user"
        android:layout_toRightOf="@+id/status_image"
        android:alpha=".54"
        android:textSize="14sp"
        android:textColor="@color/green"/>

</RelativeLayout>
